{{#foreach posts}}
<article class="{{post_class}}">
    <h1 class="post-title"><a href="{{url}}">{{title}}</a></h2>
    <p class="post-content">{{excerpt words="60"}} </p>
    {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
    <!-- {{tags prefix=" on "}} -->
    <div class="post-footer clearfix">
        <a class="read-more" href="{{url}}">继续阅读&raquo;</a>
        <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
    </div>  
</article>
{{/foreach}}


