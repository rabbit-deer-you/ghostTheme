<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <section class="post-meta">
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
            </section>
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>
    </article>
    {{!-- Links to Previous/Next posts --}}
	<aside class="read-next clearfix">
		{{#prev_post}}
	    <a class="read-prev-story prev" href="{{url}}">« {{title}}</a>
	    {{/prev_post}}
	    {{#next_post}}
	    <a class="read-next-story" href="{{url}}">{{title}} »</a>
	    {{/next_post}}
	</aside>
</main>



{{/post}}
